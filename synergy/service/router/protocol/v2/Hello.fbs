namespace synergy.protocol.v2.fb;

enum OS: ubyte {
    Unknown = 0,
    Linux   = 32,
    macOS   = 64,
    Windows = 128
}

table Version {
    major_num: ubyte;
    minor_num: ubyte;
    patch_num: ubyte;
    tag: string;
    revision: string;
}

table Hello {
    id: uint;
    name: string;
    version: Version;
    os: OS;
}
